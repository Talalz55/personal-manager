<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalProject.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FinalProject"
    Shell.TabBarBackgroundColor="DarkSlateBlue"
    Shell.TabBarTitleColor="GhostWhite"
    Shell.TabBarUnselectedColor="#A0A3A8"
    Shell.TitleColor="White"
    Shell.BackgroundColor="DarkSlateBlue">

    <TabBar>
        <Tab Title="Dashboard" Icon="dash">
            <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="DashboardPage" />
        </Tab>
        <Tab Title="Finance" Icon="money">
            <ShellContent
            Title="Finance"
            ContentTemplate="{DataTemplate local:FinancePage}"
            Route="FinancePage" />
        </Tab>
        <Tab Title="Add" Icon="add">
            <ShellContent
            Title="Add"
            ContentTemplate="{DataTemplate local:AddPage}"
            Route="AddPage" />
        </Tab>
        <Tab Title="Profile" Icon="user">
            <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>
